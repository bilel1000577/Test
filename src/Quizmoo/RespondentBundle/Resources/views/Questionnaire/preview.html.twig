            // mobile check the entire row
            $('.grp_radio li').click(function(event) {
                if (event.target.type !== 'checkbox') {
                    $(':checkbox', this).trigger('click');
                }
                if (event.target.type !== 'radio') {
                    $(':radio', this).trigger('click');
                }
            });

            $('.table.ranking tr td.rank').click(function(event) {
                if (event.target.type !== 'radio') {
                    $(':radio', this).trigger('click');
                }
            });

            $('.table.rating tr td.rate').click(function(event) {
                if (event.target.type !== 'radio') {
                    $(':radio', this).trigger('click');
                }
            });
        });
