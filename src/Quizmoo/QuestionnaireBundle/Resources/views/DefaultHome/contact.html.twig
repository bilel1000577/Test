<!DOCTYPE html>
<head>
     <link rel="icon" 
      type="image/png" 
      href="{{asset('faviconquiz.png')}}">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <meta name="description" content="" />
     <meta name="author" content="" />
     <meta charset="utf-8" />
     <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
     <title>Quizmoo &middot; Surveys made easy</title>
     <title>{% block title %}Quizmoo{% endblock %}</title>
    {% block stylesheets %}
            {% if app.getRequest().getLocale() == 'ar' %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.rtl.css') }}" type="text/css" />
            {% else %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" />
            {% endif %}
            <link href="{{ asset('bundles/quizmooquestionnaire/css/contact.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
 {% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/jquery.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
  {% endblock %}
  {% include '::navbarquizmoo.html.twig' %}
</head>
<body>
<div class="container-fluid">
    <div class="jumbotron" style="background-color: white;">
    
    </div>
</div>   
<div class="container">
      <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well well-sm">

          <form action="{{ path('quizmoo_contact') }}" method="post" {{ form_enctype(form) }} class="contact">
            <fieldset>
            <legend class="text-center">{{'contact.label'|trans}}</legend>
            {{ form_errors(form) }}
            <div class="form-group">
              <label class="col-md-3 control-label" for="name">{{ form_label(form.name) }}</label>
              <div class="col-md-9">
                {{ form_widget(form.name,{ 'attr': {'placeholder': 'contact.pname','class': 'form-control' } }) }}
                {{ form_errors(form.name) }}
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-3 control-label" for="email">{{ form_label(form.email) }}</label>
              <div class="col-md-9">
                {{ form_widget(form.email,{ 'attr': {'placeholder': 'contact.pemail','class': 'form-control' } }) }}
                {{ form_errors(form.email) }}
              </div>
            </div>
            
            <div class="form-group">
              <label class="col-md-3 control-label" for="name">{{ form_label(form.subject) }}</label>
              <div class="col-md-9">
                {{ form_widget(form.subject,{ 'attr': {'placeholder': 'contact.psubject','class': 'form-control' } }) }}
                {{ form_errors(form.subject) }}
              </div>
            </div>

            <!-- Message body -->
            <div class="form-group">
              <label class="col-md-3 control-label" for="body">{{ form_label(form.body) }}</label>
              <div class="col-md-9">
                {{ form_widget(form.body,{ 'attr': {'placeholder': 'contact.pbody','class': 'form-control' } }) }}
                {{ form_errors(form.body) }}
              </div>
            </div>

            {{ form_rest(form) }}
            <div class="form-group">
              <label class="col-md-3 control-label" for="body"></label>
              <div class="col-md-9 text-left">
                <input type="submit" value="{{'contact.submit'|trans}}" class="btn btn-primary" />
              </div>
            </div>
            
            </fieldset>
          </form>
          {% if app.session.hasFlash('contact-notice') %}
              <div class="blogger-notice">
                  {{ app.session.flash('contact-notice') }}
              </div>
          {% endif %}
        </div>
      </div>
      </div>
</div>
</body>
</html>