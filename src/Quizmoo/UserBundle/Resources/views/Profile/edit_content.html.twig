<div class="container">
  <div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well well-sm">
    <form class="bs-example form-horizontal" action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
    <fieldset style="padding: 10px;">
        <div class="form-group">
          <div class="col-lg-12">
            {{ form_row(form.firstname,{ 'attr': {'class': 'form-control' } }) }}
         </div>
        </div>
        <div class="form-group">
          <div class="col-lg-12">
            {{ form_row(form.lastname,{ 'attr': {'class': 'form-control' } }) }}
         </div>
        </div>
        <div class="form-group">
          <div class="col-lg-12">
            {{ form_row(form.gender,{ 'attr': {'class': 'form-control' } }) }}
         </div>
        </div>
        <div class="form-group">
          <div class="col-lg-12">
            {{ form_row(form.education,{ 'attr': {'class': 'form-control' } }) }}
         </div>
        </div>
        <div class="form-group">
          <div class="col-lg-12">
            {{ form_row(form.position,{ 'attr': {'class': 'form-control' } }) }}
         </div>
        </div>
        <div class="form-group">
          <div class="col-lg-12">
            {{ form_row(form.user_location,{ 'attr': {'class': 'form-control' } }) }}
         </div>
        </div>
         <div class="form-group">
          <div class="col-lg-12">
            {{ form_row(form.user_birthday) }}
         </div>
        </div>
        <div class="form-group">
          <div class="col-lg-12">
            {{ form_row(form.email,{ 'attr': {'class': 'form-control' } }) }}
         </div>
        </div>
        <div class="form-group">
          <div class="col-lg-12">
            {{ form_row(form.username,{ 'attr': {'class': 'form-control' } }) }}
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-12">
            {{ form_row(form.current_password,{ 'attr': {'class': 'form-control' } }) }}
          </div>
        </div>
        {{ form_rest(form) }}
        <div class="submit">
            <input type="submit" class="btn btn-primary" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>
    </fieldset>
    </form>
    </div>
  </div>
  </div>
</div>

  

